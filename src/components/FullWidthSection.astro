---
const { class: extra = '' } = Astro.props;
---

<div class={`full-width-section ${extra}`}>
  <slot />
</div>

<style>
  .full-width-section {
    grid-column: 1 / -1;
    background: rgba(var(--glow-accent), 0.08);
    backdrop-filter: blur(12px);
    border-radius: 1.5rem;
    padding: 2rem;
    box-shadow:
      0 8px 32px rgba(0, 0, 0, 0.1),
      inset 0 0 0 1px var(--glow-soft);
  }

  /* The UL inside the slotted content needs a global selector so the
     styles apply to markup passed into the slot. */
  :global(.full-width-section ul) {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    /* allow up to 2 items per row; items won't get smaller than 200px */
    grid-template-columns: repeat(2, minmax(200px, 1fr));
    gap: 1.5rem;
  }

  @media (max-width: 768px) {
    .full-width-section {
      padding: 1.25rem;
    }

    :global(.full-width-section ul) {
      grid-template-columns: 1fr;
    }
  }
</style>
