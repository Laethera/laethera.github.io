---
const { class: extra = '' } = Astro.props;
---

<li class={`skill-item ${extra}`}>
  <slot />
</li>

<style>
  .skill-item {
    color: var(--text-color);
    background: color-mix(in srgb, var(--secondary-color) 10%, transparent);
    padding: 0.5rem 1rem;
    border-radius: 1rem;
    border: 1px solid color-mix(in srgb, var(--secondary-color) 40%, transparent);
    text-align: center;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 2.5rem;
  }

  .skill-item:hover {
    background: color-mix(in srgb, var(--secondary-color) 15%, transparent);
    transform: translateY(-2px);
    box-shadow: var(--glow-subtle);
  }

  /* small-screen tweak */
  @media (max-width: 480px) {
    .skill-item {
      padding: 0.4rem 0.75rem;
    }
  }
</style>
