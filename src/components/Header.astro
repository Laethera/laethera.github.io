---
import catLogo from "../assets/cat.png";
---

<header class="header">
    <div class="header-content">
        <div class="logo">
            <a href="/">
                <img src={catLogo.src} alt="Cat Logo" class="logo-image" />
                <h1 class="logo-text">VK</h1>
            </a>
        </div>
        <nav>
            <ul class="nav-links">
                <li><a href="/" class="nav-link">Home</a></li>
                <li><a href="/projects" class="nav-link">Projects</a></li>
            </ul>
        </nav>
    </div>
</header>

<style>
    .header {
        position: fixed;
        top: 2rem;
        left: 50%;
        width: calc(100% - 4rem);
        max-width: 800px;
        transform: translateX(-50%);
        z-index: 1000;
        background: rgba(var(--glow-accent), 0.08);
        backdrop-filter: blur(12px);
        border-radius: 2rem;
        box-shadow:
            0 8px 32px rgba(0, 0, 0, 0.3),
            inset 0 0 0 1px var(--glow-soft),
            inset 0 8px 16px var(--glow-soft);
        animation: float 3s ease-in-out infinite;
    }

    @keyframes float {
        0%,
        100% {
            transform: translateX(-50%) translateY(0px);
        }
        50% {
            transform: translateX(-50%) translateY(-4px);
        }
    }

    .header-content {
        display: flex;
        gap: 2rem;
        align-items: center;
        padding: 0.75rem 1rem;
        justify-content: space-between;
    }

    .logo a {
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .logo-image {
        width: 2rem;
        height: 2rem;
        border-radius: 50%;
        object-fit: cover;
        border: var(--button-outline);
        background: rgba(var(--glow-accent), 0.06);
        transition: all 0.3s ease;
    }

    .logo-image:hover {
        transform: scale(1.06);
        box-shadow: var(--glow-primary);
    }

    .logo-text {
        font-size: 1.5rem;
        font-weight: bold;
        /* use primary color for the logo text so it stands out */
        color: var(--primary-color);
        text-shadow: var(--glow-subtle), var(--glow-secondary);
        transition: all 0.3s ease;
        position: relative;
    }

    .logo-text:hover {
        text-shadow: var(--glow-primary), var(--glow-secondary);
    }

    /* keyboard focus for logo */
    .logo a:focus-visible {
        outline: var(--focus-outline);
        outline-offset: 4px;
        box-shadow: var(--glow-primary);
    }

    .logo-text::after {
        content: "";
        position: absolute;
        bottom: -4px;
        left: 0;
        width: 100%;
        height: 2px;
        background: linear-gradient(
            90deg,
            rgba(var(--glow-accent), 0) 0%,
            rgba(var(--glow-accent), 0.5) 50%,
            rgba(var(--glow-accent), 0) 100%
        );
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .logo-text:hover::after {
        opacity: 1;
    }

    .nav-links {
        list-style: none;
        display: flex;
        gap: 0.75rem;
        margin: 0;
        padding: 0;
    }

    .nav-link {
        /* use the global text color for nav links so it's themeable */
        color: var(--text-color);
        text-decoration: none;
        padding: 0.5rem 1.2rem;
        border-radius: 1.5rem;
        background: rgba(var(--glow-accent), 0.1);
        transition: all 0.25s ease;
        border: var(--button-outline);
        font-size: 0.95rem;
        box-shadow: none;
    }

    .nav-link:hover {
        background: rgba(var(--glow-accent), 0.18);
        box-shadow:
            var(--glow-secondary),
            inset 0 0 8px var(--glow-soft);
        border-color: rgba(var(--glow-accent), 0.35);
        transform: translateY(-2px);
    }

    .nav-link:focus-visible {
        outline: var(--focus-outline);
        outline-offset: 4px;
        box-shadow: var(--glow-primary);
    }

    @media (max-width: 768px) {
        .header {
            top: 1rem;
            width: calc(100% - 2rem);
            max-width: 90vw;
            border-radius: 1.5rem;
        }

        .header-content {
            padding: 0 1rem;
            gap: 1.5rem;
        }

        .nav-links {
            gap: 0.75rem;
        }

        .nav-link {
            padding: 0.4rem 0.8rem;
        }
    }
</style>
