---
const { title = '', class: extra = '' } = Astro.props;
---

<li class={`accented-tile ${extra}`} data-type="accented">
  {title ? <h3 class="accented-tile__title">{title}</h3> : null}
  <slot />
</li>

<style>
  .accented-tile {
    background: rgba(var(--glow-accent), 0.06);
    border-radius: 1rem;
    padding: 1rem 1.5rem;
    line-height: 1.6;
    border: 1px solid color-mix(in srgb, var(--primary-color) 18%, transparent);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    box-shadow: inset 0 0 0 1px var(--glow-soft);
  }

  .accented-tile::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 6px;
    height: 100%;
    background: color-mix(in srgb, var(--primary-color) 85%, black 10%);
    box-shadow: var(--glow-subtle);
  }

  .accented-tile:hover {
    transform: translateY(-2px);
    background: rgba(var(--glow-accent), 0.09);
    box-shadow: var(--glow-subtle);
  }

  .accented-tile__title { margin: 0 0 0.5rem 0; }
</style>
